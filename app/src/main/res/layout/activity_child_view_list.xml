<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:background="#ffffff"
    tools:context="org.honeypretty.honeyprettykidslove.KidsRegActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#efebef"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dot_image1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/dott" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f7f3d5"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/roundedImageViewPic_1"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:baselineAlignBottom="false"
            android:src="@drawable/titleimage_2"
            app:siBorderColor="@color/darkGray"
            app:siBorderWidth="1dp"
            app:siRadius="5dp"
            app:siSquare="true" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/roundedImageViewPic_2"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:baselineAlignBottom="false"
            android:src="@drawable/titleimage_4"
            app:siBorderColor="@color/darkGray"
            app:siBorderWidth="1dp"
            app:siRadius="5dp"
            app:siSquare="true" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/roundedImageViewPic_3"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:baselineAlignBottom="false"
            android:src="@drawable/titleimage_3"
            app:siBorderColor="@color/darkGray"
            app:siBorderWidth="1dp"
            app:siRadius="5dp"
            app:siSquare="true" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/roundedImageViewPic_4"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:baselineAlignBottom="false"
            android:src="@drawable/titleimage_5"
            app:siBorderColor="@color/darkGray"
            app:siBorderWidth="1dp"
            app:siRadius="5dp"
            app:siSquare="true" />


        <!--
