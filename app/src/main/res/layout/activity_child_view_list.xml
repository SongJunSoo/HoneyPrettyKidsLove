        <!--<ListView-->
        <!--android:id="@+id/listview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->


        <!--</RelativeLayout>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#efebef"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dot_image5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/dott" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/titlePan"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#f6f7f7">

        <ImageView
            android:id="@+id/parentImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dot_img"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#efebef"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dot_image7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/dott" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f7f3d5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/child_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top|left|center_vertical"
                android:layout_marginLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="15dp"
                android:text="0"
                android:textColor="#0e0e0e"
                android:textStyle="bold" />

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/roundedImageView_love"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:baselineAlignBottom="true"
                android:src="@drawable/heart_1"
                app:siBorderColor="@color/darkGray"
                app:siBorderWidth="2dp"
                android:paddingTop="15dp"
                app:siRadius="25dp"
                app:siSquare="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="#0e0e0e"
                android:paddingTop="15dp"
                android:paddingLeft="3dp"
                android:paddingRight="5dp"
                android:gravity="top|left|center_vertical"
                android:text="보유"/>

            <LinearLayout
                android:id="@+id/left_key"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/roundedImageViewPic_PrevChild"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="0dp"
                    android:paddingLeft="20dp"
                    android:baselineAlignBottom="false"
                    android:layout_gravity="center"
                    android:src="@drawable/left_key"
                    app:siBorderColor="@color/darkGray"
                    app:siBorderWidth="1dp"
                    app:siRadius="25dp"
                    app:siSquare="true"
                   />

            </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/parent_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text=""/>

            <TextView
                android:id="@+id/birth"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/roundedImageViewPic_NextChild"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="3dp"
                android:baselineAlignBottom="false"
                android:layout_gravity="center"
                android:src="@drawable/right_key"
                app:siBorderColor="@color/darkGray"
                app:siBorderWidth="1dp"
                app:siRadius="25dp"
                app:siSquare="true" />


            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/roundedImageViewPic_folding"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:baselineAlignBottom="false"
                android:layout_gravity="center"
                android:src="@drawable/top_key"
                app:siBorderColor="@color/darkGray"
                app:siBorderWidth="1dp"
                app:siRadius="25dp"
                app:siSquare="true" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#efebef"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dot_image6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/dott" />

    </LinearLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="#f1f1ef">
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>


</LinearLayout>