<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="#f6f7f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/roundedImageView_childImage"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:baselineAlignBottom="false"
                android:src="@drawable/ju_1"
                app:siBorderWidth="3dp"
                app:siRadius="20dp"
                app:siSquare="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/name"
                android:textStyle="bold"
                android:textColor="#0e0e0e"
                android:layout_marginLeft="0dp"
                android:gravity="top|left|center_vertical"
                android:text="주헌이"/>

            <TextView
                android:id="@+id/datetime"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:textColor="#0e0e0e"
                android:gravity="top|left|center_vertical"
                android:text="게시일 : 2017-10-14 09:38:27"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7ed6ec"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/roundedImageView_sticker"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:baselineAlignBottom="false"
                android:src="@drawable/icon_4"
                android:paddingBottom="10dp"
                app:siBorderWidth="3dp"
                app:siRadius="20dp"
                app:siSquare="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/sticker_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textColor="#0e0e0e"
                android:layout_marginLeft="0dp"
                android:gravity="top|left|center_vertical"
                android:paddingTop="10dp"
                android:text="스티커 : 엄마 청소 돕기"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7ed6ec"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/praise_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7ed6ec"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/praise_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#0e0e0e"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="top|left|center_vertical"
            android:text="엄마 청소를 도와 주었어요."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7ed6ec"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="#0e0e0e"
                android:paddingTop="5dp"
                android:paddingRight="3dp"
                android:gravity="top|left|center_vertical"
                android:text="500"/>

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/roundedImageView_love"
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:baselineAlignBottom="false"
                android:src="@drawable/heart_1"
                app:siBorderColor="@color/darkGray"
                app:siBorderWidth="2dp"
                app:siRadius="15dp"
                app:siSquare="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="#0e0e0e"
                android:paddingTop="5dp"
                android:paddingLeft="3dp"
                android:gravity="top|left|center_vertical"
                android:text="적립"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f4d5f4"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>